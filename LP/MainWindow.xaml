        <Label x:Name="NewOrderLabel" Content="Enter Order Nuber below: 👇:"  Style="{StaticResource classicLbl}" Margin="535,206,0,0" Width="329"/>
        <TextBox x:Name="NewOrderText" Text="0000" Margin="576,246,101,153" TextAlignment="Center" TextWrapping="Wrap" Foreground="#FF698AED" BorderBrush="#FF698AED"/>
        <Button Content="new order" Click="newOrder_Click" Margin="366,149,0,0" RenderTransformOrigin="2.133,-4.808" Height="43" Width="124" Style="{StaticResource classicBtn}"/>
        <Button Content="Follow Your Order" Click="FollowOrder_Click" Margin="511,149,0,0" Width="251" Height="43" Style="{StaticResource classicBtn}"/>
    </Grid>
</Window>
